<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="0003" author="admin">
        <createTable tableName="links_url_set">
            <column name="links_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="url_set" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>
        </createTable>

        <!-- Ograniczenie klucza obcego -->
        <addForeignKeyConstraint
                baseTableName="links_url_set"
                baseColumnNames="links_id"
                constraintName="fk_links_url_set"
                referencedTableName="links"
                referencedColumnNames="id"
                onDelete="CASCADE"
        />
    </changeSet>
</databaseChangeLog>